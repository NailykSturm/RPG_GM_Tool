{
    "name": "rpg_gm_tool",
    "version": "1.0.1",
    "description": "A GM tool for RPGs",
    "private": true,
    "scripts": {
        "info": "nuxt info",
        "build": "nuxt build",
        "dev": "nuxt dev --dotenv=.env.dev",
        "dev:host": "nuxt dev --dotenv=.env.dev --host",
        "dev:test": "nuxt dev --dotenv=.env.test",
        "dev:prod": "nuxt dev --dotenv=.env.prod",
        "generate": "nuxt generate",
        "preview": "nuxt preview",
        "postinstall": "nuxt prepare",
        "test": "vitest",
        "test:coverage": "vitest run --coverage",
        "prettier": "prettier --write .",
        "prebuild": "npm run prettier",
        "clean": "rm -rf .nuxt dist"
    },
    "dependencies": {
        "@vee-validate/rules": "^4.12.5",
        "bcrypt": "^5.1.1",
        "h3": "^1.10.0",
        "h3-typebox": "^0.6.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.1.2",
        "vee-validate": "^4.12.5"
    },
    "devDependencies": {
        "@nuxt/test-utils": "^3.11.0",
        "@nuxtjs/tailwindcss": "^6.11.4",
        "@types/bcrypt": "^5.0.2",
        "@types/jsonwebtoken": "^9.0.5",
        "@vitest/coverage-v8": "^1.2.2",
        "@vitest/ui": "^1.2.2",
        "daisyui": "^4.7.2",
        "nuxt": "^3.10.1",
        "prettier": "3.2.5",
        "vitest": "^1.2.2"
    }
